rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // DEV: 공개 읽기 허용. 운영 전 엄격히 조이세요.
    match /chat/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /qr/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /chatMedia/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 게시판 업로드 (필요시 세분화)
    match /boards/{boardId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // 기타 경로: 인증 사용자만 쓰기
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}



