{
  "expo": {
    "name": "App-YooYLand",
    "slug": "App-YooYLand",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "appyooyland",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yooyland.wallet",
      "infoPlist": {
        "NSContactsUsageDescription": "연락처를 불러와 친구를 추가하기 위해 사용합니다.",
        "NSCameraUsageDescription": "QR 스캔 및 인증 기능을 위해 카메라를 사용합니다.",
        "NSPhotoLibraryUsageDescription": "사진을 선택하거나 업로드하기 위해 사진 라이브러리에 접근합니다.",
        "NSPhotoLibraryAddUsageDescription": "앱에서 생성한 이미지를 보관하기 위해 사진 라이브러리에 저장합니다.",
        "NSMicrophoneUsageDescription": "동영상 녹화 등 일부 기능에서 오디오를 사용할 수 있습니다.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "resize",
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_CONTACTS",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "package": "com.yooyland.wallet",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": false,
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            { "scheme": "yooy" },
            { "scheme": "appyooyland" }
          ]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "androidNavigationBar": {
      "barStyle": "light-content",
      "backgroundColor": "#000000"
    },
    "androidStatusBar": {
      "backgroundColor": "#000000",
      "translucent": false,
      "barStyle": "light-content"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-apple-authentication",
      "expo-camera",
      "expo-contacts",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "kotlinVersion": "2.0.21",
            "newArchEnabled": false,
            "extraMavenRepos": [
              "https://jitpack.io"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": false
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "36784797-db25-445f-85f7-3b33aaf35f16"
      },
      "GOOGLE_MAPS_API_KEY": "${GOOGLE_MAPS_API_KEY}",
      "EXPO_PUBLIC_GOOGLE_MAPS_API_KEY": "${EXPO_PUBLIC_GOOGLE_MAPS_API_KEY}",
      "EXPO_PUBLIC_YOY_ERC20_ADDRESS": "0xf999DA2B5132eA62A158dA8A82f2265A1b1d9701",
      "EXPO_PUBLIC_CHAIN": "${EXPO_PUBLIC_CHAIN}",
      "EXPO_PUBLIC_RPC_MAINNET": "${EXPO_PUBLIC_RPC_MAINNET}",
      "EXPO_PUBLIC_RPC_SEPOLIA": "${EXPO_PUBLIC_RPC_SEPOLIA}"
    }
  }
}
